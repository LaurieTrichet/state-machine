{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "allowJs": true,
        "allowSyntheticDefaultImports":true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}